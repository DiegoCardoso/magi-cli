#!/usr/bin/env node
'use strict';

const program = require('commander');
program
  .parse(process.argv);

const {workingPackage, createAPI} = require('../lib/tools.js');

async function main() {

  const user = process.env.DIRECTORY_USER;
  const credentials = process.env.DIRECTORY_CREDENTIALS;

  if (!user) {
    throw 'Please set directory username in the DIRECTORY_USER environment variable';
  }
  if (!credentials) {
    throw 'Please set directory credentials in the DIRECTORY_CREDENTIALS environment variable';
  }

  const api = createAPI({
    baseURL: `https://vaadin.com/vaadincom/directory-service/webcomponents?owner=vaadin&name=${workingPackage.name}`,
    headers: {'Accept': '*/*'},
    responseType: 'stream',
    auth: {
      username: user,
      password: credentials
    }
  });

  const response = await api.post();

  response.data.pipe(process.stdout);

  return new Promise((resolve) => response.data.on('end', resolve));
}

main(...program.args)
  .then(() => process.exit(0))
  .catch((e) => {
    console.error(e);
    process.exit(1);
  });
